<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="All Automation Practice Tests" parallel="tests" thread-count="2">

    <test name="all tests Chrome">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="tests.PositiveLoginTests"/>
            <class name="tests.FailedLoginTests"/>
            <class name="tests.NewUserTests"/>
        </classes>
    </test>

    <test name="all tests FIREFOX">
        <parameter name="browser" value="FIREFOX"/>
        <classes>
            <class name="tests.PositiveLoginTests"/>
            <class name="tests.FailedLoginTests"/>
            <class name="tests.NewUserTests"/>
        </classes>
    </test>


</suite>